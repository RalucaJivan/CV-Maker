{% extends 'shared/layout.twig' %}
{% block title %}StackImages{% endblock %}
{% block content %}
<script>
    if (localStorage.getItem('key') == undefined) {
        window.location.href = "{{url}}/account/login";
    } else {
        let currentDate = new Date().getTime();
        let storageTime = localStorage.getItem('auth_date');
        if(currentDate - storageTime > localStorage.getItem('expire') * 1000){
            localStorage.clear();
            window.location.href = "{{url}}/account/login";
        }
    }
</script>

<!-- container pentru informatiile de baza -->
<div class="container margin-top-100">
    <div class="row align-items-center">
        <div class="col-12 mx-auto">
            <div class="jumbotron center-section-container shadow p-3">

                <h2>Objective</h2>

                <div class="row">
                    <input hidden type="text" id="id">
                    <div class="form-group col-md-6">
                        <input type="text" placeholder="Position" class="form-control custom-input"
                            id="position" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-md-6">
                        <select id="time" class="form-control custom-input" style="height: 53px;">
                            <option value="Full time">Full time</option>
                            <option value="Part time">Part time</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" placeholder="Company" class="form-control custom-input"
                            id="company" aria-describedby="emailHelp">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" placeholder="Domain" class="form-control custom-input"
                            id="domain" aria-describedby="emailHelp">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-bottom: 100px;">
    <div class="row justify-content-md-center">
        <div class="col-md-4 text-center">
            <button onclick="saveObjective()" class="btn btn-primary">Save</button>
            <a href="{{url}}/builder/view/{{id}}" class="btn btn-primary">Back to Viewer</a>
        </div>
    </div>
</div>
{% endblock %}