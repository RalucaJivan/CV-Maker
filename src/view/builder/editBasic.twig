{% extends 'shared/layout.twig' %}
{% block title %}StackImages{% endblock %}
{% block content %}
<script>
    if (localStorage.getItem('key') == undefined) {
        window.location.href = "{{url}}/account/login";
    } else {
        let currentDate = new Date().getTime(); //getTime imi returneaza timpul in ms si de aceea inmultesc cu 1000; getTime ul este bazat pe timpul calculatorului
        let storageTime = localStorage.getItem('auth_date');
        if(currentDate - storageTime > localStorage.getItem('expire') * 1000){
            localStorage.clear();
            window.location.href = "{{url}}/account/login";
        }
    }
</script>

    <div class="container margin-top-100">
        <div class="row align-items-center">
