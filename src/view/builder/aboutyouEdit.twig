{% extends 'shared/layout.twig' %}
{% block title %}StackImages{% endblock %}
{% block content %}
<script>
    if (localStorage.getItem('key') == undefined) {
        window.location.href = "{{url}}/account/login";
    } else {
        let currentDate = new Date().getTime();
        let storageTime = localStorage.getItem('auth_date');
        if(currentDate - storageTime > localStorage.getItem('expire') * 1000){
            localStorage.clear();
            window.location.href = "{{url}}/account/login";
        }
    }
</script>

<div class="container">
    <div class="row align-items-center">
        <div class="col-12 mx-auto">
            <div class="jumbotron center-section-container shadow p-3">

                <h2>Interests</h2>

                <div id="interestsContainer">

                </div>



                <button onclick="addInterests()" class="btn btn-primary">Add</button>

            </div>
        </div>
    </div>
</div>

<!-- container pentru informatiile de baza -->
